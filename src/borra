  /* Very top border */
  .summaryTable:before {
    content: '';
    display: block;
    position: absolute;
    top: -20px;
    left: 120px;
    height: 20px;
    width: 240px;
    border: solid 1px #000;
    border-bottom: none;
  }
  
  /* Far right headers top border (it's outside the table) */
  .summaryTable:after { 
    content: '';
    display: block;
    position: absolute;
    border-top: solid 1px #000;
    width: 101px;
    right: -101px;
    top: 0;
  }
  
  /* 
   - Apply header background/font colour 
   - Set base z-index for IE 9 - 10
  */
  .rotate:before {
    background: #FFF;
    color: #FFF;
    z-index: 1;
    
  }
  
  /* min-width and max-width together act like a width */
  .rotate {
      min-width: 60px;
      max-width: 60px;
      position: relative;
      height: 25vh;     
  }
  
  /* Pseudo element borders */
  .rotate:before {
      content: '';
      display: block;
      position: absolute;
      top: 0;
      right: 125px;
      height: 47px;
      width: 151px;
      border: solid 1px #000;
      border-right: none;
      border-top: none;
      transform: skew(-45deg);
      border-bottom: none;
  }
  
  /* Apply the right border only to the last pseudo element */
  .rotate:last-child:before {
      border-right: solid 1px #000;
  }
  
  
  /* 
   - Rotate and position headings
   - Padding centers the text vertically and does the job of height
   - z-index ensures that the text appears over the background color in IE 9 - 10
  */
  .rotate span {
  transform: rotate(-45deg);
    display: inline-block;
    vertical-align: middle;
    position: absolute;
    right: -70px;
    bottom: 29px;
    height: 0;
    padding: 0.75em 0 1.85em;
    width: 100px;
    z-index: 2;
  }
  
  
  /* Create first two th styles */
  .rotate:nth-child(1),th:nth-child(2)  {
    border: solid 1px #000;
    border-top: none;
    border-bottom: none;
  }
  .rotate:nth-child(2) {
      border-right: none;
  }
  .rotate:nth-child(1):before,
  .rotate:nth-child(2):before  {
      display: none;	
  }